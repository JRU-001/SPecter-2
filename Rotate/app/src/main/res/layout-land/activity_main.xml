<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <Button
            android:text="Enviar"
            android:layout_width="650dp"
            android:layout_height="55dp" android:id="@+id/btn"
            app:layout_constraintTop_toBottomOf="@+id/nmb"
            android:layout_marginTop="28dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.469" app:layout_constraintVertical_bias="0.009"/>
    <EditText
            android:layout_width="311dp"
            android:layout_height="55dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/nmb"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintVertical_bias="0.191"
            android:hint="Nobre" app:layout_constraintHorizontal_bias="0.09"/>
    <EditText
            android:layout_width="311dp"
            android:layout_height="55dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/apl"
            android:hint="Apellido" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/nmb" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.352"
            app:layout_constraintVertical_bias="0.191"/>
</androidx.constraintlayout.widget.ConstraintLayout>